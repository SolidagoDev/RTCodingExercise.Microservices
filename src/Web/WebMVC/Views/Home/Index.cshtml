@model WebMVC.ViewModels.CatalogViewModels.IndexViewModel
@{
    ViewData["Title"] = "Home Page";
    var filter = ViewBag.Filter as string ?? string.Empty;
    var orderBy = ViewBag.OrderBy as string ?? string.Empty;
}

<div class="text-center mb-4">
    <h1 class="display-5">Personalised Plate Marketplace</h1>
    <p class="lead">Browse, search, and manage unique vehicle registration plates for sale and trade. Use the tools below to find your perfect plate or manage your collection.</p>
</div>

<a asp-controller="Home" asp-action="AddPlate" class="btn btn-primary mb-3">
    Add Plate
</a>

<form method="get" asp-controller="Home" asp-action="Index" class="row g-2 mb-3 align-items-end">
    <div class="col-md-4">
        <input type="text" class="form-control" name="filter" placeholder="Search by registration, letters, numbers, or name" value="@filter" />
    </div>
    <div class="col-md-3">
        <select name="orderBy" class="form-select">
            <option value="">Order By</option>
            @if (orderBy == "price")
            {
                <option value="price" selected>Price</option>
            }
            else
            {
                <option value="price">Price</option>
            }
        </select>
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-outline-primary">Search</button>
    </div>
</form>

<form method="post" asp-controller="Home" asp-action="ApplyDiscount" class="row g-2 mb-3 align-items-end">
    <div class="col-md-3">
        <input type="text" class="form-control" name="plateId" placeholder="Plate Id" required />
    </div>
    <div class="col-md-3">
        <input type="text" class="form-control" name="promoCode" placeholder="Promo Code" required />
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-success">Apply Discount</button>
    </div>
</form>

<div class="mb-3">
    <strong>Total Revenue:</strong> @ViewBag.TotalRevenue <br />
    <strong>Average Profit Margin:</strong> @ViewBag.AvgProfitMargin %
</div>

@if (TempData["DiscountResult"] != null)
{
    <div class="alert alert-info">@TempData["DiscountResult"]</div>
}

<div class="container">
    @if (Model.Plates.Count() > 0)
    {
        <partial name="_pagination" for="PaginationInfo" />

        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th>Plate</th>
                        <th>Purchase Price</th>
                        <th>Sale Price</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var plate in Model.Plates)
                {
                    <partial name="_plate" model="plate" />
                }
                </tbody>
            </table>
        </div>

        <form method="get" asp-controller="Home" asp-action="Index" class="row g-2 align-items-center mb-4">
            <input type="hidden" name="filter" value="@filter" />
            <input type="hidden" name="orderBy" value="@orderBy" />
            <input type="hidden" name="page" value="@Model.PaginationInfo.ActualPage" />
            <div class="col-auto">
                <label for="pageSize" class="col-form-label">Plates per page:</label>
            </div>
            <div class="col-auto">
                <select id="pageSize" name="pageSize" class="form-select" onchange="this.form.submit()">
                    @foreach (var size in new[] { 10, 25, 50, 100, 1000 })
                    {
                        <option value="@size" selected="@(Model.PaginationInfo.ItemsPerPage == size ? "selected" : null)">@(size == 1000 ? "All" : size.ToString())</option>
                    }
                </select>
            </div>
        </form>

        <partial name="_pagination" for="PaginationInfo" />
    }
    else
    {
        <div class="esh-catalog-items row">
            THERE ARE NO RESULTS THAT MATCH YOUR SEARCH
        </div>
    }
</div>